@model VacaYAY.ViewModels.DetailsEmployeeViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Employee Details</h2>

<div>
    @if (Model.Active)
    {
    <p>
        <a href="~/Employees/Edit/@Model.EmployeeID">
            Edit <i class="fa fa-cog"></i>
        </a> |
        @Html.ActionLink("All employees", "Index")
    </p>
    }
    else
    {
        <p>
            @Html.ActionLink("Restore", "Restore", new { id = Model.EmployeeID }) <i class="fa fa-cog"></i> |
            @Html.ActionLink("Back to List", "Inactive")
        </p>
    }
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Profession)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Profession)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CurrentVacationDays)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentVacationDays)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LeftoverVacationDays)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LeftoverVacationDays)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsManager)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsManager)
        </dd>

    </dl>
    <h3>Contracts</h3>
    <table class="table table-responsive">
        <tr class="top-row">
            <th>
                Serial Number
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Document
            </th>
        </tr>

        @foreach (var item in Model.Contracts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.ActionLink("Preview", "Preview", "Employees", new { filename = item.Link }, new { target = "_blank" })
                </td>
            </tr>
        }

    </table>
    <h3>Resolutions</h3>
    <table class="table table-responsive">
        <tr class="top-row">
            <th>
                Serial Number
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Days
            </th>
            <th>
                Document
            </th>
        </tr>

        @foreach (var item in Model.Resolutions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumOfDays)
                </td>
                <td>
                    @Html.ActionLink("Preview", "Preview", "Employees", new { filename = item.Link }, new { target = "_blank" })
                </td>
            </tr>
        }

    </table>
    <h3>Extra Days</h3>
    <table class="table table-responsive">
        <tr class="top-row">
            <th>
                Timestamp
            </th>
            <th>
                Basis
            </th>
            <th>
                Days
            </th>
        </tr>

        @foreach (var item in Model.ExtraDays)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Basis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Days)
                </td>
            </tr>
        }

    </table>
</div>

